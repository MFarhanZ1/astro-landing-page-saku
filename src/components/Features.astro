---
import { Clock, Wallet, Users } from "lucide-react";

const features = [
	{
		icon: Clock,
		title: "Cepat & Tepat Waktu",
		description:
			"Driver kami sesama mahasiswa yang hafal jalan tikus kampus.",
	},
	{
		icon: Wallet,
		title: "Harga Mahasiswa",
		description:
			"Tarif super hemat yang gak bikin kantong kering di akhir bulan.",
	},
	{
		icon: Users,
		title: "Satu Frekuensi",
		description:
			"Driver dan penumpang sama-sama anak kuliahan. Aman dan nyambung!",
	},
];
---

<section id="fitur" class="md:px-20 px-4 py-16 md:py-24 bg-secondary/50">
	<div class="container mx-auto px-6 flex flex-col items-center">
		<h2
			class="font-sans text-3xl md:text-5xl font-bold text-center text-gray-900 mb-4"
		>
			Kenapa SaKu?
		</h2>
		<div class="w-20 h-1 bg-primary rounded-full mb-12"></div>

		<div class="flex flex-col md:flex-row gap-8 w-full">
			{
				features.map((feature) => (
					<div class="flex-1 bg-white p-6 md:p-8 rounded-2xl border border-gray-100 shadow-sm transition-all duration-300 hover:border-primary/50 hover:shadow-md transform hover:-translate-y-1">
						<div class="mb-6 p-3 bg-primary/10 w-fit rounded-xl text-primary">
							<feature.icon
								className="w-8 h-8"
								stroke-width={1.5}
							/>
						</div>
						<h3 class="font-sans text-xl md:text-2xl font-bold text-gray-900 mb-3">
							{feature.title}
						</h3>
						<p class="font-mono text-sm md:text-base text-gray-500 leading-relaxed">
							{feature.description}
						</p>
					</div>
				))
			}
		</div>
	</div>
</section>
