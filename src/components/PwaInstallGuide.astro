---
import { AppWindow, Share, SquarePlus } from "lucide-react";

const steps = [
	{
		icon: AppWindow,
		title: "1. Buka di Browser",
		description:
			"Buka website SaKu (saku.app) di browser HP-mu (Chrome, Safari, dll).",
	},
	{
		icon: Share,
		title: "2. Cari Tombol Opsi",
		description:
			"Klik tombol 'Share' [↑] (di iOS) atau menu 'Opsi' ︙ (di Android).",
	},
	{
		icon: SquarePlus,
		title: "3. Add to Home Screen",
		description:
			"Pilih 'Tambahkan ke Layar Utama' atau 'Install App'. SaKu akan muncul di HP-mu!",
	},
];
---

<section id="install" class="md:px-20 px-4 py-16 md:py-24 bg-secondary">
	<div class="container mx-auto px-6 flex flex-col items-center">
		<h2
			class="font-sans text-3xl md:text-5xl font-bold text-center text-gray-900 mb-6"
		>
			Install SaKu App
		</h2>
		<p
			class="font-mono text-lg text-gray-500 text-center mb-12 md:mb-16 mx-auto max-w-2xl"
		>
			Nikmati kemudahan akses SaKu langsung dari layar HP-mu, tanpa perlu
			download di Play Store atau App Store.
		</p>

		<div class="w-full max-w-3xl">
			<div class="relative flex flex-col gap-10 md:gap-16">
				<!-- Vertical Line -->
				<div
					class="absolute left-6 md:left-8 top-0 h-[90%] w-px bg-gray-300 hidden md:block"
				>
				</div>

				{
					steps.map((step) => (
						<div class="relative flex flex-row items-start gap-4 md:gap-8 bg-white p-6 rounded-2xl border border-gray-200 shadow-sm z-10">
							<div class="relative z-10 shrink-0 h-12 w-12 md:h-16 md:w-16 bg-secondary text-primary border border-primary/20 rounded-full flex items-center justify-center shadow-inner">
								<step.icon
									className="w-6 h-6 md:w-8 md:h-8"
									stroke-width={1.5}
								/>
							</div>

							<div class="pt-1">
								<h3 class="font-sans text-xl md:text-2xl font-semibold text-gray-900 mb-2">
									{step.title}
								</h3>
								<p class="font-mono text-sm md:text-base text-gray-500 leading-relaxed">
									{step.description}
								</p>
							</div>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>
